{
  "name": "gitlabvault",
  "version": "0.1.0",
  "description": "GitLabVault - Verwalte GitLab Merge Requests und Git-Operationen direkt in Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "gitlab",
    "git",
    "merge-request"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/ui": "^4.0.13",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "obsidian": "latest",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@gitbeaker/rest": "^43.8.0",
    "simple-git": "^3.30.0"
  }
}
